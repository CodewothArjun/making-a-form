    <form action="" onsubmit="return formvalidation()">
        <h2>Login</h2>
        <div id="container">
            Name:
            <input type="text" placeholder="Username" id="username" class="h"><br>
            <p id="user error" class="error"></p>
            Password:
            <input type="password" placeholder="Password" id="Password" class="h"><br>
            <p id="pass error" class="error"></p>
            E-mail:
            <input type="email" name="email" placeholder="Enter a E-mail" class="h"><br><br>
